# General Config {{{
set mbox_type=Maildir
set folder=$HOME/.mail
set sleep_time = 0

set mailcap_path = ~/.mutt/mailcap

    # Global {{{
    set auto_tag = yes
    set include
    set move = no
    set wait_key = no

    set editor = "$EDITOR"

    set mail_check = 5
    set timeout = 3

    set new_mail_command="notify-send --icon=/usr/share/icons/Arc/actions/22@2x/mail_new.png 'New Email in %f' '%n new messages, %u unread' &"
    # }}}

    # Status Line {{{
    set status_chars  = " *%A"
    set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"
    # }}}

    # Viewing Options {{{
    alternative_order text/plain text/html *
    auto_view text/html
    # }}}

    # Headers {{{
    ignore *
    unignore from: to: cc: date: subject:
    unhdr_order *
    hdr_order from: to: cc: date: subject:
    # }}}
# }}}

# Index View {{{
set date_format = "%m/%d %H:%M"
set index_format = "%4C | %Z | %D | %-20.20F | %4c | %s"
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set uncollapse_jump

    # Key Bindings {{{
    bind index g noop
    bind index gg first-entry
    bind index G  last-entry

    bind index z collapse-thread
    bind index Z collapse-all

    bind index r group-reply
    bind index R reply

    bind index <tab> sync-mailbox
    bind index p recall-message

    macro index \cb "<pipe-message> urlscan<ENTER>" "call urlscan to extract URLs out of a message"
    # }}}
# }}}

# Pager View {{{
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set pager_format="%4C %Z %[!%b %e at %I:%M %p] %.20n %s%* -- (%P)"
set menu_scroll
set tilde
unset markers

    # Key Bindings {{{
    bind pager k previous-line
    bind pager j next-line

    bind pager g noop
    bind pager gg top
    bind pager G bottom

    bind pager r group-reply
    bind pager R reply

    bind pager <tab> sync-mailbox

    macro pager \cb "<pipe-message> urlscan<ENTER>" "call urlscan to extract URLs out of a message"
    # }}}
# }}}

# Compose View Options {{{
set include
set forward_quote
set edit_headers

    # Key Bindings {{{
    bind compose p postpone-message
    # }}}
# }}}

# Send Options {{{
set sendmail_wait = 0
unset record
# }}}

# Notmuch Commands {{{
# Find email addresses by searching through all previous email
set query_command="notmuch-addrlookup --mutt '%s'"

# Search email for a specific keyword
macro index S \
"<enter-command>set my_old_pipe_decode=\$pipe_decode my_old_wait_key=\$wait_key nopipe_decode nowait_key<enter>\
<shell-escape>notmuch-mutt -r --prompt search<enter>\
<change-folder-readonly>`echo ${XDG_CACHE_HOME:-$HOME/.cache}/notmuch/mutt/results`<enter>\
<enter-command>set pipe_decode=\$my_old_pipe_decode wait_key=\$my_old_wait_key<enter>" \
     "notmuch: search mail"

# Unroll the thread an email belongs to
macro index <Esc>t \
"<enter-command>set my_old_pipe_decode=\$pipe_decode my_old_wait_key=\$wait_key nopipe_decode nowait_key<enter>\
<pipe-message>notmuch-mutt -r thread<enter>\
<change-folder-readonly>`echo ${XDG_CACHE_HOME:-$HOME/.cache}/notmuch/mutt/results`<enter>\
<collapse-thread>\
<enter-command>set pipe_decode=\$my_old_pipe_decode wait_key=\$my_old_wait_key<enter>" \
     "notmuch: reconstruct thread"
# }}}

# Misc Bindings {{{
bind editor <tab> complete-query
bind editor ^T complete
# }}}

# Neomutt Specific Additions {{{
set abort_noattach = ask-yes
set abort_noattach_regex = "\\<attach(|ed|ments?)\\>"
# }}}

# Setup your folders, realname, theme overrides, etc.
source ~/.mutt/local

