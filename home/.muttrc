# General Config {{{
set mbox_type=Maildir
set folder=$HOME/.mail
set sleep_time = 0

set mailcap_path = ~/.mutt/mailcap

    # Global {{{
    set auto_tag = yes
    set include
    set move = no
    set wait_key = no

    set editor = "$EDITOR"

    set mail_check = 0
    set timeout = 3
    # }}}

    # Status Line {{{
    set status_chars  = " *%A"
    set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"
    # }}}

    # Viewing Options {{{
    alternative_order text/plain text/html *
    auto_view text/html
    # }}}

    # Headers {{{
    ignore *
    unignore from: to: cc: date: subject:
    unhdr_order *
    hdr_order from: to: cc: date: subject:
    # }}}
# }}}

# Index View {{{
set date_format = "%m/%d %H:%M"
set index_format = "%4C | %Z | %D | %-20.20F | %4c | %s"
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set uncollapse_jump

    # Key Bindings {{{
    bind index gg first-entry
    bind index G  last-entry

    bind index z collapse-thread
    bind index Z collapse-all

    bind index r group-reply
    bind index R reply

    bind index <tab> sync-mailbox
    bind index p recall-message

    macro index \cb "<pipe-message> urlscan<ENTER>" "call urlscan to extract URLs out of a message"
    # }}}
# }}}

# Pager View {{{
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers

    # Key Bindings {{{
    bind pager k previous-line
    bind pager j next-line

    bind pager gg top
    bind pager G bottom

    bind pager r group-reply
    bind pager R reply

    bind pager <tab> sync-mailbox

    macro pager \cb "<pipe-message> urlscan<ENTER>" "call urlscan to extract URLs out of a message"
    # }}}
# }}}

# Compose View Options {{{
set include
set forward_quote
set edit_headers

    # Key Bindings {{{
    bind compose p postpone-message
    # }}}
# }}}

# Send Options {{{
set sendmail_wait = 0
unset record
# }}}

# Misc Bindings {{{
bind editor <tab> complete-query
bind editor ^T complete
# }}}

# Setup your folders, realname, theme overrides, etc.
source ~/.mutt/local

